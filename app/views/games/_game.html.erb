<li class="game-item">
  <%= link_to game, class: 'game-link' do %>
    <div class="players">
      <%= render 'players', game: %>
    </div>
    <div class="status"><%= game.status %></div>
  <% end %>
  <% if game.joinable_by?(current_player) %>
    <%= button_to 'Join', join_game_path(game), class: 'join-button' %>
  <% end %>
</li>
